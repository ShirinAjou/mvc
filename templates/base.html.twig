<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('img/glider.svg') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li><a href="{{ path('home') }}">Home</a></li>
                    <li><a href="{{ path('about') }}">About</a></li>
                    <li><a href="{{ path('report') }}">Report</a></li>
                    <li><a href="{{ path('lucky_number') }}">Lucky number</a></li>
                    <li><a href="{{ path('card') }}">Card</a></li>
                    <li><a href="{{ path('game') }}">21</a></li>
                </ul>
            </nav>
        </header>
        
        <main>{% block main %}{% endblock %}</main>

        <footer>
            <p>En footer som visar rimliga detaljer</p>
        </footer>
    </body>
</html>

